<div ng-controller="NavLinkController">
    @Html.Partial("_NavLinkPartial")
    <h2 style="padding-top:80px; padding-left:250px">Seach Navlink</h2>
    <hr>
    <div class="container" style="padding-bottom:10px">
        <div class="form-group row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Name</label>
                    <input class="form-control" ng-model="name" type="text" placeholder="Name">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Created By</label>
                    <input class="form-control" ng-model="createdBy" type="text" placeholder="Created By">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <button type="submit" class="btn btn-success" ng-click="search()">
                        <i class="fa fa-search"></i>
                        <span class=""> Search </span>
                    </button>
                    <button class="btn btn-secondary" ng-click="reset()">
                        <i class="fa fa-rotate-left"></i>
                        <span class=""> Reset </span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="content">
        <div>
            <div class="actions" style="float:right">
                <a href="" class="btn btn-primary" ng-click="add()">
                    <i class="fa fa-plus"></i>
                    <span class="">New</span>
                </a>
            </div>
        </div>
        <br><br>
        <div style="margin-top:15px">
            <table ng-table="tableParams" class="table table-striped table-bordered table-md" width="100%">
                <tr ng-repeat="item in $data">
                    <td width="4%" data-title="'Name'" sortable="'Name'" header-class="'table-header text-left'" class="text-left">
                        {{item.Name}}
                    </td>
                    <td width="4%" data-title="'Controller'" sortable="'Controller'" header-class="'table-header text-left'" class="text-left">
                        {{item.Controller}}
                    </td>
                    <td width="4%" data-title="'CreatedBy'" sortable="'CreatedBy'" header-class="'table-header text-left'" class="text-left">
                        {{item.CreatedBy}}
                    </td>
                    <td width="4%" data-title="'CreatedOn'" sortable="'CreatedOn'" header-class="'table-header text-left'" class="text-left">
                        {{item.CreatedOn | date : 'MM/dd/yyyy hh:mm a'}}
                    </td>
                    <td width="1%">
                        <div class="dropdown">
                            <button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown" id="action">
                                Actions
                            </button>
                            <div class="dropdown-menu" aria-labelledby="action">
                                <a class="dropdown-item" ng-click="edit(item.NavlinkId)">Edit</a>
                                <a class="dropdown-item" ng-click="delete(item.NavlinkId)">Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr ng-show="$data.length == 0">
                    <td colspan="8" class="text-center" style="font-style:unset">
                        No data available
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>


