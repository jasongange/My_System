<div ng-controller="AddOrUpdateAppUserController">
    @Html.Partial("_NavLinkPartial")
    <div style="padding-top:80px; padding-left:250px">
        <h2>
            <span class="" ng-hide="isUpdate">Add Application User</span>
        </h2>
        <h2>
            <span class="" ng-hide="!isUpdate">Edit Application User</span>
        </h2>
    </div>
    <hr>
    <div ng-form="appUserForm" class="form">
        @Html.Hidden("NavLinkId")
        <div class="container">
            <br><br>
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-1">
                  Last Name:
                </div>
                <div class="col-md-8">
                    <input type="text" name="Name" class="form-control" ng-model="appUser.LastName" required />
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-1">
                    First Name:
                </div>
                <div class="col-md-8">
                    <input type="text" name="LastName" class="form-control" ng-model="appUser.FirstName" required />
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-1">
                    Middle Name:
                </div>
                <div class="col-md-8">
                    <input type="text" name="Username" class="form-control" ng-model="appUser.MiddleName" required />
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-1">
                    Email:
                </div>
                <div class="col-md-8">
                    <input type="text" name="Username" class="form-control" ng-model="appUser.Email" required />
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-1">
                    Username:
                </div>
                <div class="col-md-8">
                    <input type="text" name="Username" class="form-control" ng-model="appUser.UserName" required />
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-1">
                    Password:
                </div>
                <div class="col-md-8">
                    <input type="text" name="Username" class="form-control" ng-model="appUser.Password" required />
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-8">
                    <button type="button" class="btn btn-success" ng-click="saveChanges();"> Save </button>
                    <button type="button" class="btn btn-secondary" ng-click="cancel();"> Cancel </button>
                </div>
            </div>
            <br>
        </div>
    </div>
</div>

