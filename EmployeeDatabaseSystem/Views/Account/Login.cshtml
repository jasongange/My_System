<div ng-controller="AppUserController">
    <div style="padding-bottom:100px"></div>
    <div ng-form="appUserForm" class="form">
        <h3 class="form-title fontWhite">Sign In</h3>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group" ng-class="appUserForm.username.$invalid
                     && (appUserForm.username.$dirty || formSubmitted) ? 'has-error' : ''">
                    <label class="control-label labelColor"> Username </label>
                    <span class="required"> * </span>
                    <input type="text"
                           placeholder="Enter Username"
                           name="username"
                           ng-model="LoginData.username"
                           class="form-control"
                           ng-required="true">
                    <span ng-show="appUserForm.username.$invalid
                          && (appUserForm.username.$dirty || formSubmitted)"
                          class="text-danger field-validation-error"><medium>Username is required!</medium></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group" ng-class="appUserForm.password.$invalid
                     && (appUserForm.password.$dirty || formSubmitted) ? 'has-error' : ''">
                    <label class="control-label labelColor"> Password </label>
                    <span class="required"> * </span>
                    <input type="password"
                           placeholder="Enter password"
                           name="password"
                           ng-model="LoginData.password"
                           class="form-control"
                           ng-required="true" />
                    <span ng-show="appUserForm.password.$invalid
                          && (appUserForm.password.$dirty || formSubmitted)"
                          class="text-danger field-validation-error"><medium>Password is required!</medium></span>
                </div>
            </div>
        </div>
        <p class="forgot"><a href="#">Forgot Password?</a></p>
        <button class="btn btn-primary" ng-click="saveChanges()" />Log In</button>
        @*<div class="alert alert-success" ng-if="isSuccess">
            <strong>{{message}}</strong>
        </div>
        <div class="alert alert-error" ng-if="isFailed">
            <strong>{{message}}</strong>
        </div>*@
    </div>
</div>
