<div ng-controller="StudentController">
    @Html.Partial("_NavLinkPartial")
    <h2 style="padding-top:80px; padding-left:250px">Search Student</h2>
    <hr>
    <div class="container" style="padding-bottom:10px">
        <div class="form-group row">
            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">Student No</label>
                    <input class="form-control" ng-model="studentNo" type="text" placeholder="Student No">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">Last Name</label>
                    <input class="form-control" ng-model="lastName" type="text" placeholder="Last Name">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">First Name</label>
                    <input class="form-control" ng-model="firstName" type="text" placeholder="First Name">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">Middle Name</label>
                    <input class="form-control" ng-model="middleName" type="text" placeholder="Middle Name">
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">Gender</label>
                    <select class="form-control" ng-model="genderId" type="text" placeholder="Gender"></select>
                </div>
            </div>
            @*<div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">Religion</label>
                    <select class="form-control" ng-model="religionId" type="text" placeholder="Religion"></select>
                </div>
            </div>*@
            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">Created By</label>
                    <input class="form-control" ng-model="createdBy" type="text" placeholder="Created By">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">Address</label>
                    <input class="form-control" ng-model="address" type="text" placeholder="Address">
                </div>
            </div>
            <div class="col-md-3" style="padding-top:31px">
                <div class="form-group">
                    <button type="submit" class="btn btn-success" ng-click="search()">
                        <i class="fa fa-search"></i>
                        <span class=""> Search </span>
                    </button>
                    <button class="btn btn-secondary" ng-click="reset()">
                        <i class="fa fa-rotate-left"></i>
                        <span class=""> Reset </span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="content">
        <div>
            <div class="actions" style="float:right">
                <a href="" class="btn btn-primary" ng-click="add()">
                    <i class="fa fa-plus"></i>
                    <span class="">New</span>
                </a>
            </div>
        </div>
        <br><br>
        <div style="margin-top:15px">
            <table ng-table="tableParams" class="table table-striped table-bordered table-md" width="100%">
                <tr ng-repeat="item in $data">
                    <td width="4%" data-title="'Student No'" sortable="'StudentNo'" header-class="'table-header text-left'" class="text-left">
                        {{item.StudentNo}}
                    </td>
                    <td width="4%" data-title="'Last Name'" sortable="'LastName'" header-class="'table-header text-left'" class="text-left">
                        {{item.LastName}}
                    </td>
                    <td width="4%" data-title="'First Name'" sortable="'FirstName'" header-class="'table-header text-left'" class="text-left">
                        {{item.FirstName}}
                    </td>
                    <td width="4%" data-title="'Middle Name'" sortable="'MiddleName'" header-class="'table-header text-left'" class="text-left">
                        {{item.MiddleName}}
                    </td>
                    <td width="4%" data-title="'Address'" sortable="'Address'" header-class="'table-header text-left'" class="text-left">
                        {{item.Address}}
                    </td>
                    <td width="4%" data-title="'Gender'" sortable="'Gender'" header-class="'table-header text-left'" class="text-left">
                        {{item.Gender}}
                    </td>
                    <td width="4%" data-title="'Paid'" sortable="'IsPaid'" header-class="'table-header text-left'" class="text-left">
                        {{item.IsPaid}}
                    </td>
                    <td width="4%" data-title="'YearLevel'" sortable="'YearLevel'" header-class="'table-header text-left'" class="text-left">
                        {{item.YearLevel}}
                    </td>
                    <td width="4%" data-title="'Remarks'" sortable="'Remarks'" header-class="'table-header text-left'" class="text-left">
                        {{item.Remarks}}
                    </td>
                    <td width="4%" data-title="'CreatedBy'" sortable="'CreatedBy'" header-class="'table-header text-left'" class="text-left">
                        {{item.CreatedBy}}
                    </td>
                    <td width="4%" data-title="'CreatedOn'" sortable="'CreatedOn'" header-class="'table-header text-left'" class="text-left">
                        {{item.CreatedOn | date : 'MM/dd/yyyy hh:mm a'}}
                    </td>
                    <td width="1%">
                        <div class="dropdown">
                            <button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown" id="action">
                                Actions
                            </button>
                            <div class="dropdown-menu" aria-labelledby="action">
                                <a class="dropdown-item" ng-click="edit(item.StudentId)">Edit</a>
                                <a class="dropdown-item" ng-click="delete(item.StudentId)">Delete</a>
                                <a class="dropdown-item" ng-hide="item.IsPaid === 'Yes'" ng-click="tagAsPaid(item.StudentId)">Tag as Paid</a>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr ng-show="$data.length == 0">
                    <td colspan="13" class="text-center" style="font-style:unset">
                        No data available
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>




